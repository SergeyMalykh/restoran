@import '../../colors/colors.styl'
@import '../../colors/icons.styl'

.header-container
  padding 50px 10px 50px 0px
  background-color softPurple
  color headerTextColor

.bottom-container
  background-color bottomContainer
  padding 20px 100px 20px 100px

@media (max-width: 1200px)
  .item-blocks-header
    padding-bottom 30px

  .float-right
    float none !important

  .bottom-container-center
    text-align center

// @media (max-width: 1200px) and (min-width: 992px)
// .bottom-container-center
// text-align center
@media (max-width: 992px)
  .bottom-container-chunk
    margin-left auto
    margin-right auto
    width max-content
    margin-bottom 30px

.divider-line-bottom
  border-bottom 1px solid dividerLine

.item-blocks
  padding 50px 5px 50px 0px

.float-right
  float right

.cancel-ul-style
  list-style-type none
  padding 0px

.text-weight
  font-weight 550

.text-subtitle
  @extend .text-weight

.header-text-h1
  font-size 58px
  @extend .text-weight

.header-text-p
  font-size 20px

.main-items-container
  margin-bottom 50px

.icon-size
  font-size small
  vertical-align middle

// icons
.fa
  padding 8px
  font-size 23px
  width 39px
  text-align center
  text-decoration none
  border-radius 7px

.fa:hover
  opacity 0.7

.fa-facebook
  background facebook
  color iconContrastColor

.fa-twitter
  background twitter
  color iconContrastColor

.fa-google-plus
  background googlePlus
  color iconContrastColor
  padding 8px 2px 8px 0px

.fa-linkedin
  background linkedin
  color iconContrastColor

.fa-youtube
  background youtube
  color iconContrastColor

.mail-to
  font-size 32px
  padding-left 4px
  padding-bottom 8px
