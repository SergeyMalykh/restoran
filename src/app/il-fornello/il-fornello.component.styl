@import '../../colors/colors.styl'

#topheader .navbar-nav li > a
  background-color navBarBackground
  text-transform capitalize
  color navBarNormalText
  transition background-color 0.2s, color 0.2s
  /* &:hover,
  &:focus {
  	background-color: #333;
  	color: #fff;
  } */

#topheader .navbar-nav li.active > a
  background-color navBarSelectBackground
  color navBarSelectText

.navbar-override
  margin-bottom 0px
  border-bottom 1px solid navBarSelectBackground
  border-left 0px
  border-right 0px
  border-top 0px
  border-radius 0px
  background-color navBarBackground

.icon-size
  font-size 19px
  display inline-block
  vertical-align middle

.navbar-custom-text
  margin-left -5px
  display inline-block
  vertical-align middle

.navbar-brand-counter
  padding 9px
